<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="24dp">

    <TextView
        android:id="@+id/vocalistIcon"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_icon"
        android:maxLength="1"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/card_vocalist_icon_temp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vocalistTitle"
        android:layout_width="wrap_content"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/vocalist"
        app:layout_constraintBottom_toBottomOf="@+id/vocalistIcon"
        app:layout_constraintStart_toEndOf="@+id/vocalistIcon"
        app:layout_constraintTop_toTopOf="@+id/vocalistIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>